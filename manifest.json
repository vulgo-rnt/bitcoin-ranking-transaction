{
  "manifest_version": 3,
  "name": "Watch BTC Tx",
  "version": "1.0",
  "description": "Observes your bitcoin transaction and informs you when it is confirmed",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "alarms"],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  }
}
